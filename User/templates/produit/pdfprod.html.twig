
<h1 align ="center" style="color:cadetblue;">Liste Produits</h1><hr>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h1 align="center" style="color:greenyellow;">Produit</h1>

                    </div>
                    <!DOCTYPE html>
                    <html>
                    <head>
                        <style>
                            #customers {
                                font-family: Arial, Helvetica, sans-serif;
                                border-collapse: collapse;
                                width: 100%;
                            }
                            #customers td, #customers th {
                                border: 1px solid #ddd;
                                padding: 8px;
                            }
                            #customers tr:nth-child(even){background-color: #f2f2f2;}
                            #customers tr:hover {background-color: #b1dfbb;}
                            #customers th {
                                padding-top: 12px;
                                padding-bottom: 12px;
                                text-align: left;
                                background-color:#b084eb;
                                color: white;
                            }
                        </style>
                    </head>
                    </html>
                </div>
            </div>
        </div>
    </div>
</div>


<table class="table table-striped table-bordered" id="customers" >
    <thead>
    <tr>
        <th class="wd-15p">

            libelle</th>
        <th class="wd-15p">

            prix</th>
        <th class="wd-15p">

            image</th>
        <th class="wd-15p">

            description</th>
    </tr>
    </thead>
    <tbody>
    {% for p in prod %}
        <tr>
            <td>{{ p.libelle }}</td>
            <td>{{ p.prix}}</td>
            <td> <img class="profile-user-img img-fluid"
                      src="{{'/uploads/produit' ~ p.image }}"
                      alt="image"></td>
            <td>{{ p.description }}</td>

        </tr>
    {% endfor %}
    </tbody>
</table>


