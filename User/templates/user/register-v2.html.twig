<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="{{ asset('plugins/fontawesome-free/css/all.min.css')}}">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="{{ asset('plugins/icheck-bootstrap/icheck-bootstrap.min.css')}}">
  <!-- Theme style -->
  <link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css')}}">
</head>
<body class="hold-transition register-page">
{% for flashError in app.flashes('verify_email_error') %}
  <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
{{ form_start(registrationForm)}}
<div class="register-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="{{ path('home') }}" class="h1"><b>BrainTech</b></a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Register a new membership</p>

      <form action="{{ path('home') }}" method="post">
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.username , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'username'}} ) }}
          {{ form_errors(registrationForm.username) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.email , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'adresse email'}} ) }}
          {{ form_errors(registrationForm.email) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.password , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'password'}} ) }}
          {{ form_errors(registrationForm.password) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.image , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Select image'}} ) }}
          {{ form_errors(registrationForm.image) }}
          <div class="input-group-append">

          </div>
        </div>

        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
              <label for="agreeTerms">
               I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
          <!-- /.col -->
        </div>
      </form>


      <a href="{{ path('login') }}" class="text-center">J'ai déjà un compte</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
  {{ form_end(registrationForm)}}
</div>
  <!-- /.register-box -->

<!-- jQuery -->
<script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<!-- AdminLTE App -->
<script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
</body>
</html>
